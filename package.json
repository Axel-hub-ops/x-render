{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "widgets/*",
    "tools/schema-generator",
    "tools/form-render-excel"
  ],
  "scripts": {
    "build": "lerna run build",
    "doc": "dumi build",
    "predeploy": "npm run doc",
    "deploy": "gh-pages -d docs-dist",
    "start": "PORT=8080 dumi dev",
    "size": "ANALYZE=1 dumi build",
    "clean": "lerna clean -y",
    "changelog": "lerna-changelog",
    "publish": "npm run build && lerna publish -m \"chore: publish\" --no-verify-access",
    "format": "prettier -c --write \"docs/**/*\" \"packages/**/*\" \"tools/**/*\" \"widgets/**/*\"",
    "test": "jest",
    "test:clean": "jest --clearCache"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@umijs/plugin-esbuild": "1.x",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.0.5",
    "antd": "^4.x",
    "babel-jest": "^27.4.4",
    "babel-plugin-import": "^1.13.0",
    "dumi": "1.1.38",
    "father-build": "^1.17.2",
    "fetch-jsonp": "^1.1.3",
    "gh-pages": "^3.0.0",
    "jest": "^27.4.4",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.0.7",
    "monaco-editor-webpack-plugin": "^4.1.1",
    "prettier": "^2.6.0",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-packagejson": "^2.2.16",
    "prismjs": "^1.20.0",
    "react": "^16.12.0",
    "react-monaco-editor": "^0.44.0",
    "react-simple-code-editor": "^0.11.0",
    "yorkie": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alibaba/x-render.git",
    "branch": "master",
    "platform": "github"
  }
}
